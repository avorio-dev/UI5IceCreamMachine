<mvc:View
    controllerName="UI5IceCreamMachine.controller.Dashboard"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:microchart="sap.suite.ui.microchart"
>
    <Page title="{i18n>dashboardTitle}">
        <layout:HorizontalLayout allowWrapping="true">
            <!-- Simple Tile with Process Progress -->
            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{i18n>ProcessTitle}"
                subheader="{i18n>ProcessSubTile}"
            >
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                scale="%"
                                value="{
                                    path: 'process>/Nodes',
                                    formatter: '.getProgress'
                                }"
                                icon="sap-icon://factory"
                            />
                        </content>
                    </TileContent>
                </tileContent>
            </GenericTile>

            <!-- Simple Tile with Counter -->
            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{i18n>CounterTile}"
                subheader="{i18n>CounterSubTile}"
            >
                <tileContent>
                    <TileContent>
                        <content>
                            <NumericContent
                                value="{
                                    path: 'reviews>/UserReviews',
                                    formatter: '.getEntityCount'
                                }"
                                indicator="None"
                                valueColor="Neutral"
                            />
                        </content>
                    </TileContent>
                </tileContent>
            </GenericTile>

            <!-- Simple Tile with Micr Chart-->
            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{
                        parts: [
                            'i18n>MicroChartTile',
                            'business>/year',
                            'business>/currency'
                        ],
                        formatter: '.formatMessage'
                    }"
            >
                <tileContent>
                    <TileContent>
                        <content>
                            <microchart:BulletMicroChart
                                size="Responsive"
                                targetValue="{business>/plannedExpenses}"
                                targetValueLabel="{
                                        path: 'business>/plannedExpenses',
                                        formatter: '.formatNumber'
                                    }"
                                actualValueLabel="{
                                        path: 'business>/expenses',
                                        formatter: '.formatNumber'
                                    }"
                                minValue="0"
                            >
                                <microchart:actual>
                                    <microchart:BulletMicroChartData
                                        value="{business>/expenses}"
                                        color="Critical"
                                    />
                                </microchart:actual>
                                <microchart:thresholds>
                                    <microchart:BulletMicroChartData
                                        value="{business>/expensesCritical}"
                                        color="Critical"
                                    />
                                    <microchart:BulletMicroChartData
                                        value="{business>/budget}"
                                        color="Error"
                                    />
                                </microchart:thresholds>
                            </microchart:BulletMicroChart>
                        </content>
                    </TileContent>
                </tileContent>
            </GenericTile>

            <!-- Simple Tile With Icon -->
            <GenericTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                header="{i18n>TemperatureTile}"
                subheader="{i18n>TemperatureSubTile}"
            >
                <tileContent>
                    <TileContent>
                        <content>
                            <ImageContent src="sap-icon://temperature" />
                        </content>
                    </TileContent>
                </tileContent>
            </GenericTile>

            <!-- Slide Tile loaded from XML Model -->
            <SlideTile
                id="slideTileXml"
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                sizeBehavior="Responsive"
                width="50%"
            >
                <!-- Loaded from XML Model -->
            </SlideTile>

            <!-- Slide Tile loaded from XML Model converted in JSON Model -->
            <SlideTile
                id="slideTileXmlToJson"
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                sizeBehavior="Responsive"
                width="50%"
                tiles="{feedsXmlToJson>/tiles}"
            >
                <GenericTile
                    header="{feedsXmlToJson>title}"
                    subheader="{feedsXmlToJson>description}"
                    press=".onFeedOpen"
                >
                    <TileContent footer="{feedsXmlToJson>pubDate}">
                        <content>
                            <!-- Loaded from JSON Model con -->
                        </content>
                    </TileContent>
                </GenericTile>
            </SlideTile>

            <!-- Slide Tile loaded from JSON Model -->
            <SlideTile
                class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                tiles="{news>/News}"
            >
                <GenericTile
                    backgroundImage="{news>image}"
                    state="{news>state}"
                    frameType="TwoByOne"
                >
                    <tileContent>
                        <TileContent
                            footer="{
                                    path: 'news>date',
                                    formatter: '.formatJSONDate'
                                }"
                        >
                            <content>
                                <NewsContent
                                    contentText="{news>content}"
                                    subheader="{news>subheader}"
                                />
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
            </SlideTile>
        </layout:HorizontalLayout>
    </Page>
</mvc:View>
