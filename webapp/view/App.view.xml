<mvc:View
    controllerName="UI5IceCreamMachine.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <App id="app">
        <HBox
            id="appHBox"
            width="100%"
        >
            <Toolbar>
                <ToolbarSpacer />
                <MenuButton
                    text="{i18n>settingsMenu}"
                    icon="sap-icon://action-settings"
                    id="settingsMenu"
                    useDefaultActionOnly="true"
                >
                    <menu>
                        <Menu itemSelected=".onMenuAction">
                            <MenuItem
                                text="{i18n>setThemeItemMenu}"
                                icon="sap-icon://palette"
                                id="setThemeMenu"
                            >
                                <!-- 
                                <items>
                                    
                                    <MenuItem
                                        text="{themesCollection>Name}"
                                        key="{themesCollection>ThemeId}"
                                    />
                                    
                                    <MenuItem text="testo" key="chiave"></MenuItem>
                                </items>
                                -->
                            </MenuItem>

                            <MenuItem
                                text="{i18n>getInfoItemMenu}"
                                icon="sap-icon://display"
                            />
                        </Menu>
                    </menu>
                </MenuButton>
            </Toolbar>
            <FlexBox
                items=""
                justifyContent="End"
                wrap="Wrap"
                class="sapUiTinyMarginTop"
            >
                <Select
                    id="themeSelect"
                    forceSelection="false"
                    valueState="None"
                    selectedKey="{modelThemes>/SelectedTheme}"
                    change=".onSelectTheme"
                    items="{
						path: 'modelThemes>/ThemesCollection',
						sorter: { path: 'Name' }
					}"
                >
                    <core:Item
                        key="{modelThemes>ThemeId}"
                        text="{modelThemes>Name}"
                    />
                </Select>
            </FlexBox>

            <Panel
                headerText=""
                backgroundDesign="Solid"
                expandable="{device>/system/phone}"
                expanded="{= !${device>/system/phone}}"
            >
                <content>
                    <Title
                        text="{i18n>appTitle}"
                        titleStyle="H2"
                        textAlign="Center"
                        width="100%"
                        class="sapUiMediumMarginTop"
                    />

                    <core:Icon
                        src="sap-icon://sap-ui5"
                        size="20rem"
                        width="100%"
                        tooltip="{i18n>appTitle}"
                        color="#1873B4"
                        class="sapUiMediumMarginTop"
                    />

                    <ProgressIndicator
                        id="loadingBar"
                        displayValue="0%"
                        displayOnly="true"
                        displayAnimation="false"
                        state="Success"
                        class="sapUiMediumMarginTop"
                    />

                    <FlexBox
                        items=""
                        justifyContent="Center"
                        wrap="Wrap"
                        class="sapUiMediumMarginTop sapUiTinyMarginBottom"
                    >
                        <Button
                            id="dashboardBtn"
                            icon="sap-icon://activate"
                            text="{i18n>dashboardButton}"
                            type="Emphasized"
                            press=".onDashboardBtn"
                        />
                    </FlexBox>
                </content>
            </Panel>
        </HBox>
    </App>
</mvc:View>
