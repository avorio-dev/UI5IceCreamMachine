<mvc:View
    controllerName="UI5IceCreamMachine.controller.App"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <App id="app">
        <Panel
            headerText=""
            class="sapUiResponsiveMargin"
            width="auto"
            expandable="{device>/system/phone}"
            expanded="{= !${device>/system/phone}}"
            backgroundDesign="Solid"
        >
            <content>
                <HBox
                    class="sapUiMediumMarginBottom"
                    id="ThemeHBox"
                >
                    <Select
                        id="themeSelect"
                        forceSelection="false"
                        valueState="None"
                        selectedKey="{modelThemes>/SelectedTheme}"
                        change=".onSelectTheme"
                        items="{
						path: 'modelThemes>/ThemesCollection',
						sorter: { path: 'Name' }
					}"
                    >
                        <core:Item
                            key="{modelThemes>ThemeId}"
                            text="{modelThemes>Name}"
                        />
                    </Select>
                </HBox>
                <Title
                    text="{i18n>appTitle}"
                    titleStyle="H2"
                    textAlign="Center"
                    width="100%"
                />

                <core:Icon
                    src="sap-icon://sap-ui5"
                    size="20rem"
                    class="sapUiMediumMarginBottom"
                    width="100%"
                    tooltip="{i18n>appTitle}"
                    color="#1873B4"
                />

                <ProgressIndicator
                    id="loadingBar"
                    class="sapUiSmallMarginBottom"
                    displayValue="0%"
                    displayOnly="true"
                    displayAnimation="false"
                    state="Success"
                />

                <FlexBox
                    items=""
                    justifyContent="Center"
                    wrap="Wrap"
                    class="sapUiSmallMarginBottom"
                >
                    <Button
                        id="startBtn"
                        icon="sap-icon://activate"
                        text="{i18n>startButton}"
                        type="Emphasized"
                        class="sapUiResponsiveMargin"
                        press=".onStartBtn"
                    />
                </FlexBox>
            </content>
        </Panel>
    </App>
</mvc:View>
